<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/padre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/barcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:gravity="right"
            android:text="TextView"
            android:textColor="#fff" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/calculabaremo"
                    android:textColor="#fff"
                    android:textSize="24sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/meritoacagene"
                        android:textColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_weight="1"
                            android:text="Meritos Académicos" />

                        <RadioGroup
                            android:id="@+id/meriA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Titulo de Técnico de Grado Medio o Superior -> 16 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/b1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Titulo de Graduado en Educación Secundaria Obligatoria o sus equivalentes a efectos academicos -> 6 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <!--RadioButton
                                android:id="@+id/c1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bachillerato LOE y COU -> 14 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/d1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Titulo de Técnico o equivalentes a efectos académicos -> 13 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/e1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Título de BUP, 1er curso Bachillerato LOE -> 11 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/f1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Título de Graduado en Educación Secundaria Obligatoria o sus equivalentes a efectos académicos -> 6 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" /-->

                            <RadioButton
                                android:id="@+id/j1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="Permiso de Conducción" />

                        <RadioGroup
                            android:id="@+id/meriG1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="D o superior -> 9 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/b2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="C -> 8 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/c2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="C1 -> 6 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/d2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B -> 3 punto "
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/e2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="A2/A -> 1"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/f2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="Deportista" />

                        <RadioGroup
                            android:id="@+id/meriG25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(Últimos 5 años) Deportista de alto nivel -> 3 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/b3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="Inglés" />

                        <RadioGroup
                            android:id="@+id/meriG2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Perfil Lingüistico S.L.P. 3.3.3.3. o superior -> 8 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/b4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Perfil Lingüistico S.L.P. 2.2.2.2. -> 5 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/c4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Perfil Lingüistico S.L.P. 1.1.1.1. -> 3 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/d4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/meritomili"
                        android:textColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="@string/empleoalcan" />

                        <RadioGroup
                            android:id="@+id/meriM1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haber sido Militar Profesional de Tropa y Marinería (MTM) con empleo de Cabo o superior -> 2 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <!--RadioButton
                                android:id="@+id/b5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haber sido MTM con el antiguo grado de Soldado/Marinero de Primera -> 1,5 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" /-->

                            <RadioButton
                                android:id="@+id/c5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haber sido MTM con empleo de Soldado / Marinero -> 1 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/d5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ser o haber sido Reservista Voluntario en cualquier categoría y empleo -> 0,25 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/e5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="@string/condecoraciones" />

                        <RadioGroup
                            android:id="@+id/meriM2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/boton_menu"
                            android:checkedButton="@+id/sound">

                            <RadioButton
                                android:id="@+id/a6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cruz del Mérito Militar, Naval o Aeronáutico con distintivo rojo -> 2 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/b6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cruz del Mérito Militar, Naval o Aeronáutico con distintivo azul o amarillo -> 1,75 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/c6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cruz del Mérito Militar, Naval o Aeronáutico con distintivo blanco -> 1,5 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/d6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Citación como distinguido en la Orden General -> 0,5 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/e6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mención Honorífica -> 0,25 puntos"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/f6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="NINGUNO"
                                android:textColor="@color/BLANCO"
                                android:textColorLink="@color/BLANCO"
                                android:textSize="10dp" />

                        </RadioGroup>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:text="@string/misiones"
                            android:textColorLink="@color/BLANCO" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@color/azul"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="none"
                                    android:padding="10dp"
                                    android:text="Por cada año (o fracción) hasta 4 años de servicio en las Fuerzas Armadas -> 0,25 puntos: "
                                    android:textColor="@color/BLANCO"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/anyo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/BLANCO"
                                    android:textSize="10dp"
                                    android:text="0" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="none"
                                    android:padding="10dp"
                                    android:textColor="@color/BLANCO"
                                    android:textSize="10dp"
                                    android:text="Por cada participación en misiones fuera del territorio nacional por un período igual o superior a dos meses ininterrumpidos -> 0,5 puntos: " />

                                <EditText
                                    android:id="@+id/misiones"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:textColor="@color/BLANCO"
                                    android:textSize="10dp"
                                    android:text="0" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/calcular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/boton_menu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/calcular" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>